<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_f2f2f2"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/clock_item_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/contacts02" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/clock_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李葱头"
                android:textColor="@color/color_333333"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/clock_item_duty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:singleLine="true"
                android:text="开福区环卫二部主管"
                android:textColor="@color/title_bar_28c3b1"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/clock_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="已签到"
            android:textColor="@color/title_bar_28c3b1"
            android:textSize="14sp" />
        
        <ImageView
            android:layout_width="10dp"
            android:layout_height="19dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/center_right_ic" />
    </LinearLayout>

</LinearLayout>