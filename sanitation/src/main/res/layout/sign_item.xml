<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_layout_selector"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="69dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sign_item_ic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/sign01" />

        <TextView
            android:id="@+id/sign_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="大头大头"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/sign_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="未签到"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="19dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/center_right_ic" />
    </LinearLayout>

</LinearLayout>