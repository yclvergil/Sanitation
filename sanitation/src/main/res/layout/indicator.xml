<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/indicator_root"
    android:layout_width="fill_parent"
    android:layout_height="142dp"
    android:background="@color/app_bg_color"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/indicator0"
        style="@style/indicator"
        android:background="@color/white"
        android:clickable="true" >

        <ImageView
            android:id="@+id/image_safe_ic"
            android:layout_width="20dp"
            android:layout_height="11dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/indicator_ic"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_safe"
                style="@style/indicaotr_button"
                android:contentDescription="@string/app_name"
                android:src="@drawable/safe" />

            <TextView
                style="@style/indicaotr_text"
                android:text="线路"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            style="@style/indicaotr_note"
            android:layout_gravity="top|right"
            android:contentDescription="@string/app_name" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/indicator1"
        style="@style/indicator"
        android:layout_marginLeft="0.5dp"
        android:background="@color/white"
        android:clickable="true" >

        <ImageView
            android:id="@+id/image_health_ic"
            android:layout_width="20dp"
            android:layout_height="11dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/indicator_ic"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_health"
                style="@style/indicaotr_button"
                android:contentDescription="@string/app_name"
                android:src="@drawable/health" />

            <TextView
                style="@style/indicaotr_text"
                android:text="个人中心"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            style="@style/indicaotr_note"
            android:layout_gravity="top|right"
            android:contentDescription="@string/app_name" />
    </FrameLayout>

</LinearLayout>