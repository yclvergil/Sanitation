<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manage_layout_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/checkup_item_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/contacts02" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/checkup_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李葱头"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/checkup_item_duty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:singleLine="true"
            android:text="开福区环卫二部主管"
            android:textColor="@color/color_7d7f87"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/checkup_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:text="5:20PM"
        android:textColor="@color/color_55585e"
        android:textSize="11sp"
        android:visibility="gone" />

</LinearLayout>