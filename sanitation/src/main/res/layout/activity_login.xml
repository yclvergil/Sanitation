<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_edit_bg"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/login_ic1" />

            <EditText
                android:id="@+id/edit_uname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="用户名"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/clearuser"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/login_clear"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="23dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/login_ic2" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/clearpwd"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/login_clear"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/retrieve_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="21dp"
        android:text="忘记密码？"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/retrieve_text"
        android:background="@drawable/loginbuttom_bg_select"
        android:gravity="center"
        android:text="登 陆"
        android:textColor="@color/white"
        android:textSize="17sp" />
    
    <TextView
        android:id="@+id/versions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color_333333"
        android:textSize="13sp" />

</RelativeLayout>