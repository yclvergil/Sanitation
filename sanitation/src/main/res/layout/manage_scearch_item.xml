<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manage_layout_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_layout_selector"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/search_item_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/contacts02" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/search_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李葱头"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/search_item_duty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:singleLine="true"
                android:text="开福区环卫二部主管"
                android:textColor="@color/color_7d7f87"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/search_item_entrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:background="@drawable/personnel_item"
            android:gravity="center_vertical|center_horizontal"
            android:text="查看"
            android:textColor="@color/color_f2f2f2"
            android:textSize="19sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/transverse_line" />

</LinearLayout>